<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_agregarMascota">

    <TextView
        android:id="@+id/lbl_update_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/actualizar_publicaci_n_editpublic"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="15sp"
        android:fontFamily="@font/nunito_extrabold"
        />

    <LinearLayout
        android:id="@+id/ll_update_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_update_titulo"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        >
        <TextView
            android:id="@+id/lbl_update_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre_editpublic_asd"
            android:textSize="15sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:fontFamily="@font/nunito_extrabold"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_update_nombre"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="10sp"
            android:background="@drawable/rounded_corner_background"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:maxLines="1"
            android:inputType="text"
            android:fontFamily="@font/nunito_extrabold"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_update_raza_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_update_nombre"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="7sp"
        >
        <LinearLayout
            android:id="@+id/ll_update_raza"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/lbl_update_raza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/raza_editpublic_bxc"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_extrabold"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_update_raza"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="10sp"
                app:layout_constraintStart_toEndOf="@id/lbl_registrarse_nombre"
                app:layout_constraintTop_toTopOf="@id/lbl_registrarse_nombre"
                android:background="@drawable/rounded_corner_background"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="1"
                android:inputType="text"
                android:fontFamily="@font/nunito_extrabold"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_update_color"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/lbl_update_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_editpublic_qw"
                android:textSize="15sp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:fontFamily="@font/nunito_extrabold"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_update_color"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="10sp"
                android:background="@drawable/rounded_corner_background"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="1"
                android:fontFamily="@font/nunito_extrabold"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_update_edad_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_update_raza_color"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="7sp"
        >
        <LinearLayout
            android:id="@+id/ll_update_edad"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/lbl_update_edad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edad_a_os_editpublic_mkdf"
                android:textSize="15sp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:fontFamily="@font/nunito_extrabold"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_update_edad"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="10sp"
                app:layout_constraintStart_toEndOf="@id/lbl_registrarse_nombre"
                app:layout_constraintTop_toTopOf="@id/lbl_registrarse_nombre"
                android:background="@drawable/rounded_corner_background"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="1"
                android:inputType="number"
                android:fontFamily="@font/nunito_extrabold"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_update_btnimagen"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btn_update_btnimagen"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/seleccionar_imagen_editpublic_tew"
                android:gravity="center"
                android:layout_marginTop="22sp"
                android:layout_marginStart="13sp"
                android:layout_marginEnd="13sp"
                android:textSize="10dp"
                android:background="@drawable/btn_contacto"
                android:fontFamily="@font/nunito_extrabold"
                android:padding="3dp"

                />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_update_estado_sexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_update_edad_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="7sp"
        >
        <LinearLayout
            android:id="@+id/ll_update_estado"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/lbl_update_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estado_editpublic_qcx"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_extrabold"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_update_estado"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="10sp"
                app:layout_constraintStart_toEndOf="@id/lbl_registrarse_nombre"
                app:layout_constraintTop_toTopOf="@id/lbl_registrarse_nombre"
                android:background="@drawable/rounded_corner_background"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="1"
                android:inputType="text"
                android:fontFamily="@font/nunito_extrabold"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_update_sexo"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/lbl_update_sexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sexo_editpublic_wex"
                android:textSize="15sp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:fontFamily="@font/nunito_extrabold"
                />
            <Spinner
                android:id="@+id/spn_update_sexo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="10sp"
                android:background="@drawable/rounded_corner_background"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="1"
                android:fontFamily="@font/nunito_extrabold"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_update_tamanio_tipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_update_estado_sexo"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="7sp"
        >
        <LinearLayout
            android:id="@+id/ll_update_tamanio"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/lbl_update_tamanio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tama_o_editpublic_842"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_extrabold"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                />
            <Spinner
                android:id="@+id/spn_update_tamanio"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="10sp"
                app:layout_constraintStart_toEndOf="@id/lbl_registrarse_nombre"
                app:layout_constraintTop_toTopOf="@id/lbl_registrarse_nombre"
                android:background="@drawable/rounded_corner_background"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="1"
                android:inputType="text"
                android:fontFamily="@font/nunito_extrabold"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_update_tipo"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/lbl_update_tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipo_editpublic_xcv"
                android:textSize="15sp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:fontFamily="@font/nunito_extrabold"
                />
            <Spinner
                android:id="@+id/spn_update_tipo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="10sp"
                android:background="@drawable/rounded_corner_background"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="1"
                android:fontFamily="@font/nunito_extrabold"
                />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_mostrar_imagen"
        android:layout_width="230sp"
        android:layout_height="140sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_update_tamanio_tipo"
        android:layout_marginTop="10sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_mostrar_imagen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        >
        <androidx.constraintlayout.utils.widget.MotionButton
            android:id="@+id/btn_update_eliminar"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="@string/eliminar_editpublic_csw"
            android:gravity="center"
            android:fontFamily="@font/nunito_extrabold"
            android:background="@drawable/btn_contacto"
            android:textSize="14sp"
            android:layout_marginEnd="10sp"
            />
        <androidx.constraintlayout.utils.widget.MotionButton
            android:id="@+id/btn_update_mascota"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="@string/actualizar_editpublic_zhys"
            android:gravity="center"
            android:fontFamily="@font/nunito_extrabold"
            android:background="@drawable/btn_ubicacion"
            android:textSize="14sp"
            android:textColor="@color/white"
            />

    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navega_bar"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:background="@color/violetligth"
        app:itemIconTint="?attr/textColorAlertDialogListItem"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/my_navigation_items"
        app:shapeAppearanceOverlay="@style/roundedImageViewSmall"
        />


</androidx.constraintlayout.widget.ConstraintLayout>