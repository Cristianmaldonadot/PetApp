<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violet"
    tools:context=".MainActivity"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="170sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/pet_match"
            android:layout_marginStart="40sp"
            android:layout_marginEnd="45sp"
            />
        <EditText
            android:id="@+id/txi_username"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:hint="@string/username_main_a"
            android:paddingStart="15sp"
            android:background="@drawable/rounded_corner_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_logo"
            android:layout_marginTop="25sp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:inputType="text"
            android:textSize="23sp"
            android:fontFamily="@font/nunito_extrabold"

            />
        <EditText
            android:id="@+id/txi_password"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:hint="@string/password_main_a"
            android:paddingStart="15sp"
            android:background="@drawable/rounded_corner_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txi_username"
            android:layout_marginTop="20sp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="23sp"
            android:fontFamily="@font/nunito_extrabold"
            />
        <androidx.constraintlayout.utils.widget.MotionButton
            android:id="@+id/btn_ingresar"
            android:layout_width="180dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txi_password"
            android:text="@string/ingresar_main_a"
            android:textSize="20sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/btn_default"
            android:fontFamily="@font/nunito_extrabold"
            />
        <TextView
            android:id="@+id/lbl_registrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registrarse_main_a"
            app:layout_constraintTop_toBottomOf="@+id/btn_ingresar"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>