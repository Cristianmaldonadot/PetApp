<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_signin"
    >

    <TextView
        android:id="@+id/lbl_registrarse_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Registrarse"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="40sp"
        android:fontFamily="@font/nunito_extrabold"
        />
    <LinearLayout
        android:id="@+id/ll_registrarse_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_registrarse_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start"
        android:layout_marginTop="20sp"
        android:orientation="vertical"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        >
        <TextView
            android:id="@+id/lbl_registrarse_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario :"
            android:textSize="15dp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:fontFamily="@font/nunito_extrabold"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_registrarse_usuario"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="10sp"
            android:background="@drawable/rounded_corner_background"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:maxLines="1"
            android:inputType="text"
            android:fontFamily="@font/nunito_extrabold"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_registrarse_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_registrarse_nombre"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start"
        android:layout_marginTop="20sp"
        android:orientation="vertical"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        >
        <TextView
            android:id="@+id/lbl_registrarse_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail :"
            android:textSize="15dp"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_registrarse_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="10sp"
            app:layout_constraintStart_toEndOf="@id/lbl_registrarse_nombre"
            app:layout_constraintTop_toTopOf="@id/lbl_registrarse_nombre"
            android:background="@drawable/rounded_corner_background"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:maxLines="1"
            android:inputType="text"
            android:fontFamily="@font/nunito_extrabold"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_registrarse_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_registrarse_email"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start"
        android:layout_marginTop="20sp"
        android:orientation="vertical"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        >
        <TextView
            android:id="@+id/lbl_registrarse_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ContraseÃ±a :"
            android:textSize="15dp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:fontFamily="@font/nunito_extrabold"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_registrarse_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="10sp"
            app:layout_constraintStart_toEndOf="@id/lbl_registrarse_nombre"
            app:layout_constraintTop_toTopOf="@id/lbl_registrarse_nombre"
            android:background="@drawable/rounded_corner_background"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="5sp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:maxLines="1"
            android:fontFamily="@font/nunito_extrabold"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_registrarse_celular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_registrarse_password"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start"
        android:layout_marginTop="20sp"
        android:orientation="vertical"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        >
        <TextView
            android:id="@+id/lbl_registrarse_celular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Celular :"
            android:textSize="15dp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:fontFamily="@font/nunito_extrabold"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_registrarse_celular"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="10sp"
            app:layout_constraintStart_toEndOf="@id/lbl_registrarse_nombre"
            app:layout_constraintTop_toTopOf="@id/lbl_registrarse_nombre"
            android:background="@drawable/rounded_corner_background"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:maxLines="1"
            android:inputType="number"
            android:fontFamily="@font/nunito_extrabold"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_registrarse_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_registrarse_celular"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:orientation="vertical"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        >
        <Button
            android:id="@+id/btn_registrarse"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txi_password"
            android:text="Registrarse"
            android:textSize="20sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/btn_default"
            android:fontFamily="@font/nunito_extrabold"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>