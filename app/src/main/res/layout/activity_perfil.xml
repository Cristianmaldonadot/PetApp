<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:id="@+id/scrl_perfil"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navega_bar"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".activity_perfil"
            >

            <TextView
                android:id="@+id/lbl_perfil_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/datos_personales_perfil_r"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/nunito_extrabold"
                />
            <LinearLayout
                android:id="@+id/ll_username_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lbl_perfil_title"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginTop="10sp"
                >
                <LinearLayout
                    android:id="@+id/ll_perfil_username"
                    android:layout_width="150sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/lbl_perfil_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_perfil_rga"
                        android:textSize="15sp"
                        android:layout_marginStart="15sp"
                        android:layout_marginEnd="15sp"
                        android:fontFamily="@font/nunito_extrabold"
                        />
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_perfil_username"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingStart="10sp"
                        android:paddingEnd="10sp"
                        android:background="@drawable/rounded_corner_background"
                        android:layout_marginStart="15sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:fontFamily="@font/nunito_extrabold"
                        android:enabled="false"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_perfil_nombre"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/lbl_perfil_nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nombre_perfil_riyu"
                        android:textSize="15sp"
                        android:layout_marginStart="15sp"
                        android:layout_marginEnd="15sp"
                        android:fontFamily="@font/nunito_extrabold"
                        />
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_perfil_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingStart="10sp"
                        android:paddingEnd="10sp"
                        android:background="@drawable/rounded_corner_background"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="15sp"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:fontFamily="@font/nunito_extrabold"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_apellido_celular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_username_nombre"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginTop="10sp"
                >
                <LinearLayout
                    android:id="@+id/ll_perfil_apellido"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/lbl_perfil_apellido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apellido_perfil_rqt"
                        android:textSize="15sp"
                        android:layout_marginStart="15sp"
                        android:layout_marginEnd="15sp"
                        android:fontFamily="@font/nunito_extrabold"
                        />
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_perfil_apellido"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingStart="10sp"
                        android:paddingEnd="10sp"
                        android:background="@drawable/rounded_corner_background"
                        android:layout_marginStart="15sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:fontFamily="@font/nunito_extrabold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_perfil_celular"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/lbl_perfil_celular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/celular_perfil_riuip"
                        android:textSize="15sp"
                        android:layout_marginStart="15sp"
                        android:layout_marginEnd="15sp"
                        android:fontFamily="@font/nunito_extrabold"
                        />
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_perfil_celular"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingStart="10sp"
                        android:paddingEnd="10sp"
                        android:background="@drawable/rounded_corner_background"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="15sp"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:fontFamily="@font/nunito_extrabold"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_perfil_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_apellido_celular"
                android:gravity="start"
                android:orientation="vertical"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginTop="10sp"
                >
                <TextView
                    android:id="@+id/lbl_perfil_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/e_mail_perfil_rtc"
                    android:textSize="15sp"
                    android:fontFamily="@font/nunito_extrabold"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_perfil_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    app:layout_constraintStart_toEndOf="@id/lbl_perfil_nombre"
                    app:layout_constraintTop_toTopOf="@id/lbl_perfil_nombre"
                    android:background="@drawable/rounded_corner_background"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:fontFamily="@font/nunito_extrabold"
                    android:enabled="false"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_perfil_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_perfil_email"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="start"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                >
                <TextView
                    android:id="@+id/lbl_perfil_direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/direcci_n_perfil_rqz"
                    android:textSize="15sp"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:fontFamily="@font/nunito_extrabold"
                    />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_perfil_direccion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    app:layout_constraintStart_toEndOf="@id/lbl_perfil_nombre"
                    app:layout_constraintTop_toTopOf="@id/lbl_perfil_nombre"
                    android:background="@drawable/rounded_corner_background"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:fontFamily="@font/nunito_extrabold"
                    />

            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_perfil_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_perfil_direccion"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="start"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                >
                <TextView
                    android:id="@+id/lbl_perfil_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/contrase_a_perfil_vcxnb"
                    android:textSize="15sp"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:fontFamily="@font/nunito_extrabold"
                    />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_perfil_password"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:paddingStart="15sp"
                    android:paddingEnd="5sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_perfil_password"
                    app:layout_constraintEnd_toStartOf="@+id/btn_perfil_edit"
                    android:background="@drawable/rounded_corner_background"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginTop="5sp"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:fontFamily="@font/nunito_extrabold"
                    android:enabled="false"
                    />
                <ImageView
                    android:id="@+id/btn_perfil_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    app:layout_constraintTop_toTopOf="@+id/et_perfil_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/edit"
                    android:layout_marginTop="5sp"
                    app:layout_constraintStart_toEndOf="@+id/et_perfil_password"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ll_perfil_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_perfil_password"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:layout_marginTop="20sp"
                android:orientation="horizontal"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="40sp"
                >

                <androidx.constraintlayout.utils.widget.MotionButton
                    android:id="@+id/btn_guardar"
                    android:layout_width="150sp"
                    android:layout_height="50dp"
                    android:text="@string/guardar_perfil_asd"
                    android:textSize="20sp"
                    android:background="@drawable/btn_ubicacion"
                    android:fontFamily="@font/nunito_extrabold"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_perfil_btnpubli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_perfil_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="40sp"
                >
                <androidx.constraintlayout.utils.widget.MotionButton
                    android:id="@+id/btn_btnpubli"
                    android:layout_width="240sp"
                    android:layout_height="50dp"
                    android:text="@string/mis_publicaciones_perfil_qs"
                    android:textSize="20sp"
                    android:background="@drawable/btn_contacto"
                    android:fontFamily="@font/nunito_extrabold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navega_bar"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:background="@color/violetligth"
        app:itemIconTint="?attr/textColorAlertDialogListItem"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/my_navigation_items"
        app:shapeAppearanceOverlay="@style/roundedImageViewSmall"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
