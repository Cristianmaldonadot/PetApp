<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_mascota"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:shapeAppearanceOverlay="@style/roundedImageViewSmall"
        />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imglbl_mascota"
            android:layout_width="match_parent"
            android:layout_height="85sp"
            android:layout_marginTop="170sp"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:padding="2dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="@id/img_mascota"
            app:layout_constraintEnd_toEndOf="@id/img_mascota"
            app:layout_constraintTop_toTopOf="@id/img_mascota"
            app:shapeAppearanceOverlay="@style/roundedShapeView"
            app:strokeColor="@color/grayligth"
            app:strokeWidth="2dp"
            android:layout_marginStart="9sp"
            android:layout_marginEnd="9sp"
            />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imglbl_estado"
        android:layout_width="100sp"
        android:layout_height="25sp"
        android:layout_marginTop="-10sp"
        android:adjustViewBounds="true"
        android:background="@color/yellowm"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@id/imglbl_mascota"
        app:layout_constraintTop_toTopOf="@id/imglbl_mascota"
        app:shapeAppearanceOverlay="@style/roundedStatusView"
        android:layout_marginStart="9sp"
        android:layout_marginEnd="7sp"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/layer_visitas"
        android:layout_width="50sp"
        android:layout_height="25sp"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedStatusView"
        android:layout_marginStart="18sp"
        android:layout_marginTop="20sp"
        android:alpha="0.5"

        />
    <ImageView
        android:layout_width="25sp"
        android:layout_height="25sp"
        app:layout_constraintEnd_toEndOf="@+id/layer_visitas"
        app:layout_constraintTop_toTopOf="@+id/layer_visitas"
        android:layout_marginEnd="3sp"
        android:src="@drawable/eye"
        />
    <TextView
        android:id="@+id/tv_listar_visitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/layer_visitas"
        app:layout_constraintTop_toTopOf="@+id/layer_visitas"
        app:shapeAppearanceOverlay="@style/roundedStatusView"
        android:layout_marginStart="6sp"
        android:layout_marginTop="4sp"
        android:text="@string/_1_layout_mascota_asd"
        android:textStyle="bold"
        android:textSize="12sp"
        android:fontFamily="@font/nunito_extrabold"
        />
    <TextView
        android:id="@+id/tv_listar_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/imglbl_estado"
        app:layout_constraintTop_toTopOf="@id/imglbl_estado"
        app:layout_constraintStart_toStartOf="@+id/imglbl_estado"
        app:shapeAppearanceOverlay="@style/roundedStatusView"
        android:layout_marginEnd="-12sp"
        android:layout_marginTop="4sp"
        android:text="@string/en_adopci_n_layout_mascota_asf"
        android:textStyle="bold"
        android:textSize="12sp"
        android:fontFamily="@font/nunito_extrabold"
        />
    <TextView
        android:id="@+id/tv_listar_nombre"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14sp"
        android:layout_marginTop="15sp"
        android:fontFamily="@font/nunito_extrabold"
        android:text="@string/nombre_layout_mascota_zxc"
        android:textColor="@color/violet"
        android:textFontWeight="100"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="@id/imglbl_mascota"
        app:layout_constraintTop_toTopOf="@id/imglbl_mascota" />
    <TextView
        android:id="@+id/tv_listar_raza"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14sp"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/raza_layout_mascota_azx"
        android:textFontWeight="100"
        android:textColor="@color/violet"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/imglbl_mascota"
        app:layout_constraintTop_toBottomOf="@+id/tv_listar_nombre"
        />

    <Button
        android:id="@+id/btn_add_favorities"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="60sp"
        android:layout_marginBottom="10sp"
        android:textSize="12sp"
        android:fontFamily="@font/nunito_extrabold"
        android:background="@android:color/transparent"
        />
    <ImageView
        android:id="@+id/iv_listar_heart"
        android:layout_width="35sp"
        android:layout_height="35sp"
        app:layout_constraintTop_toTopOf="@+id/img_mascota"
        app:layout_constraintEnd_toEndOf="@+id/img_mascota"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        />
    <ImageView
        android:id="@+id/img_listar_sexo"
        android:layout_width="45sp"
        android:layout_height="45sp"
        app:layout_constraintBottom_toBottomOf="@id/imglbl_mascota"
        app:layout_constraintEnd_toEndOf="@+id/imglbl_mascota"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="5sp"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>
