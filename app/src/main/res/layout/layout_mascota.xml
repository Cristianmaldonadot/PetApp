<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_mascota"
        android:layout_width="135sp"
        android:layout_height="120sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15sp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        />

    <TextView
        android:id="@+id/tv_listar_nombre"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Nombre"
        android:textFontWeight="100"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/img_mascota"
        app:layout_constraintTop_toTopOf="@id/img_mascota"
        android:layout_marginTop="15sp"
        />
    <TextView
        android:id="@+id/tv_listar_raza"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:fontFamily="@font/nunito_bold"
        android:text="Raza"
        android:textFontWeight="100"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/img_mascota"
        app:layout_constraintTop_toBottomOf="@+id/tv_listar_nombre"
        android:layout_marginTop="10sp"
        />
    <ImageView
        android:id="@+id/iv_listar_heart"
        android:layout_width="30sp"
        android:layout_height="30sp"
        app:layout_constraintStart_toStartOf="@id/tv_listar_nombre"
        app:layout_constraintTop_toBottomOf="@id/tv_listar_raza"
        android:layout_marginTop="10sp"
        android:src="@drawable/heart"
        />
    <Button
        android:id="@+id/btn_listar_contactar"
        android:layout_width="100sp"
        android:layout_height="45sp"
        app:layout_constraintTop_toTopOf="@id/iv_listar_heart"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Contactar"
        android:textSize="9dp"
        android:fontFamily="@font/nunito_extrabold"
        android:layout_marginTop="-7sp"
        />
    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_mascota"
        android:layout_marginTop="15sp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>